<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (!user) { %>
          <a class="nav-item nav-link" href="/register">
            <button class="btn btn-info" style="border: 2px solid rgb(211, 211, 211);">Register</button>
          </a>
          <a class="nav-item nav-link" href="/login">
            <button class="btn btn-info" style="border: 2px solid rgb(211, 211, 211);">Login</button>
          </a>
          <% } else { %>
            <p style="margin: auto; margin-right: 10px; margin-left: 50px; color: white;">Logged in as: <%= user.email
                %>
            </p>
            <form method="POST" action="/logout" class="form-inline">
              <button type="submit" class="btn btn-warning btn-sm"
                style="margin: auto; margin-right: 10px; border: 1px solid rgb(72, 72, 72);">Logout</button>
            </form>
            <% } %>
      </div>
    </div>
  </nav>
</header>